@model ModuleListViewModel

@{
    ViewBag.Header = "All Modules";
    ViewData["Title"] = "All Modules";
}



@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="btn-close"
                data-bs-dismiss="alert" aria-label="Close">
        </button>
        @TempData["Message"]
    </div>
}
<form asp-action="DisplayAll" method="get">
    <div>
        <p>
            Find by name: <input type="text" name="SearchString"
                                 value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-controller="Module" asp-action="DisplayAll">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table-bordered border-dark text-center table-content">
    <thead class="bg-primary">
        <tr>
            <th>
                <a class="text-dark" asp-controller="Module" asp-action="DisplayAll"
                   asp-route-sortBy="@ViewData["NameSortParam"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    Module name
                </a>
            </th>
            <th>
                <a class="text-dark" asp-controller="Module" asp-action="DisplayAll"
                   asp-route-sortBy="@ViewData["CodeSortParam"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    Module Code
                </a>
            </th>
            <th>
                Module Marks
            </th>
            <th>
                Credits 
            </th>
            <th>
                Pass Description
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (Module module in Model.Modules)
        {
            <tr>
                <td class="text-start">
                    @module.ModuleName
                </td>
                <td>
                    @module.ModuleCode
                </td>
                <td>
                    @module.ModuleMarks
                </td>
                <td>
                    @module.Credits
                </td>
                <td class="text-start">
                    @module.PassDescription
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@module.ModuleId">Edit</a> |
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@module.ModuleId"> Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<div page-model="@Model.PagingInfo" page-action="DisplayAll"
     page-searchstring="@ViewData["CurrentFilter"]"
     page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

<div class="pb-2">
    <a class="btn btn-secondary mt-3" asp-controller="Module" asp-action="Index">Back</a>
</div>

@if (ViewBag.TotalCredits != null)
{
    <div>
        <h3>Total Credits: @ViewBag.TotalCredits</h3>
    </div>
}

@if (ViewBag.GPAScore != null)
{
    <div>
        <h3>GPA Score: @ViewBag.GPAScore%</h3>
    </div>
}