@model Module

@{
    ViewData["Title"] = "Delete Module";
}

<h2>Delete Module</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h4>Are you sure you want to delete this @Model.ModuleName?</h4>
<div>
    <hr />
    <p>
        <span class="fw-bold">
            @Html.DisplayNameFor(model => model.ModuleName)
        </span><br />
        @Model.ModuleName
    </p>

    <p>
        <span class="fw-bold">
            @Html.DisplayNameFor(model => model.ModuleCode)
        </span><br />
        @Model.ModuleCode
    </p>
    <p>
        <span class="fw-bold">
            @Html.DisplayNameFor(model => model.ModuleMarks)
        </span><br />
        @Model.ModuleMarks
    </p>
    <p>
        <span class="fw-bold">
            @Html.DisplayNameFor(model => model.Credits)
        </span><br />
        @Model.Credits
    </p>
   

    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="ModuleId" />
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-controller="Module" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </form>

</div>
