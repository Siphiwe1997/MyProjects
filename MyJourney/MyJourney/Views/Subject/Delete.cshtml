@model Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h2>Delete Subject</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h4>Are you sure you want to delete this suject?</h4>
<div>
    <hr />
    <p>
        <span class="fw-bold">
            @Html.DisplayNameFor(model => model.SubjectName)
        </span><br />
        @Model.SubjectName
    </p>
    <p>
        <span class="fw-bold">
            @Html.DisplayNameFor(model => model.SubjectMarks)
        </span><br />
        @Model.SubjectMarks
    </p>
    <p>
        <span class="fw-bold">
            @Html.DisplayNameFor(model => model.Level)
        </span><br />
        @Model.Level
    </p>
   

    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="SubjectId" />
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-controller="Subject" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </form>

</div>
