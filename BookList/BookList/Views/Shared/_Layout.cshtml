<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" asp-href-include="~/lib/bootstrap/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" asp-href-include="~/lib/font-awesome/css/all.min.css" />

    <!-- Custom style sheet-->
    <link rel="stylesheet" asp-href-include="~/css/custom.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="my-4 p-5 bg-primary text-white rounded">
            <h1>My Books</h1>
        </div>
        @RenderBody()

    </div>
    <!-- JavaScript -->
    <script asp-src-include="lib/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>
</html>
